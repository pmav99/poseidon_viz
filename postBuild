set -xe

ls -lah

conda install proj4 geos

# enable jupyter_server_proxy
pip install jupyter_server_proxy
jupyter serverextension enable --sys-prefix jupyter_server_proxy

# install the panel server extension so that panel launches at startup
mv panel_server_extension.py ${NB_PYTHON_PREFIX}/lib/python*/site-packages/
jupyter serverextension enable --sys-prefix panel_server_extension

# install cartopy
pip install -U numpy
pip install numba==0.50
pip install geoviews

# Install package
pip install ./dist/poseidon_viz-0.1.0-py3-none-any.whl
